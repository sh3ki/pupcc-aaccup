# Optimized .htaccess for PDF.js worker files
# Add proper MIME types and caching for better performance

<IfModule mod_mime.c>
    # PDF.js worker files
    AddType application/javascript .mjs
    AddType application/javascript .js
    
    # Enable compression for JavaScript files
    <IfModule mod_deflate.c>
        <FilesMatch "\.(js|mjs)$">
            SetOutputFilter DEFLATE
        </FilesMatch>
    </IfModule>
    
    # Set caching headers for worker files (1 week)
    <IfModule mod_expires.c>
        ExpiresActive On
        <FilesMatch "\.(js|mjs)$">
            ExpiresDefault "access plus 1 week"
        </FilesMatch>
    </IfModule>
    
    # Add CORS headers for worker files
    <IfModule mod_headers.c>
        <FilesMatch "\.(js|mjs)$">
            Header set Access-Control-Allow-Origin "*"
            Header set Cache-Control "public, max-age=604800"
        </FilesMatch>
    </IfModule>
</IfModule>

# Security headers for PDF files
<FilesMatch "\.pdf$">
    <IfModule mod_headers.c>
        Header set X-Content-Type-Options nosniff
        Header set Content-Type application/pdf
    </IfModule>
</FilesMatch>
